<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matridx.igams.bioinformation.dao.post.IWkdlfxDao">

    <delete id="deleteById" parameterType="String">
        delete from igams_wkdlfx
        <where>
            wkcxid = #{wkcxid}
        </where>
    </delete>

    <insert id="insertList" parameterType="List">
        insert into igams_wkdlfx(wkcxid,dlfxid)
        values
        <if test="list !=null and list.size > 0">
            <foreach collection="list" separator="," item="item" index="index">
                (
                #{item.wkcxid},#{item.dlfxid}
                )
            </foreach>
        </if>
    </insert>

    <select id="getDtoList" parameterType="WkdlfxDto" resultType="WkdlfxDto">
        select dlfxjg.dlfxid, dlfxjg.wkbh, dlfxjg.wkcxid, dlfxjg.bbh, dlfxjg.nr, dlfxjg.sfbg, dlfxjg.lrsj, dlfxjg.xgry, dlfxjg.xgsj, dlfxjg.scry, dlfxjg.scsj, dlfxjg.scbj, dlfxjg.lrry
        from igams_wkdlfx wkdlfx
        left join igams_dlfxjg dlfxjg on dlfxjg.dlfxid=wkdlfx.dlfxid
        <where>
            wkdlfx.wkcxid=#{wkcxid}
        </where>
    </select>

</mapper>
