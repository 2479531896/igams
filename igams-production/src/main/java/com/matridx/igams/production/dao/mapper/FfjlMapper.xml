<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matridx.igams.production.dao.post.IFfjlDao" >
    <select id="getDtoList" parameterType="FfjlDto" resultType="FfjlDto">
        SELECT
            ffjl.bm,ffjl.ffjlid,ffjl.wjid,ffjl.fffs,ffjl.sfff,ffjl.ffrq,jgxx.jgmc
        FROM
            igams_ffjl ffjl
            LEFT JOIN matridx_jgxx jgxx ON jgxx.jgid = ffjl.bm
        WHERE ffjl.wjid = #{wjid}
    </select>
    <delete id="delete" parameterType="FfjlDto">
        delete from igams_ffjl where wjid = #{wjid}
    </delete>
    <insert id="insertFfjlDtos" parameterType="List">
        insert into igams_ffjl(ffjlid,bm,fffs,sfff,ffrq,wjid)
        VALUES
        <foreach collection="list" separator="," item="item">
            (#{item.ffjlid}, #{item.bm},
            cast (#{item.fffs} as numeric),
            #{item.sfff},
            <if test="item.ffrq !=null and  item.ffrq !=''">
            cast (#{item.ffrq} as date),
            </if>
            <if test="item.ffrq ==null or  item.ffrq ==''">
             null,
            </if>
            #{item.wjid})
        </foreach>
    </insert>

    <update id="updateFfjlDtos" parameterType="list">
        <if test="list !=null and list.size > 0">
            <foreach collection="list" separator=";" item="item" index="index">
                update igams_ffjl set
                ffjlid = #{item.ffjlid}
                <if test="item.fffs !=null and  item.fffs !=''">
                    ,fffs=cast(#{item.fffs} as numeric)
                </if>
                <if test="item.sfff !=null and  item.sfff !=''">
                    ,sfff=#{item.sfff}
                </if>
                <if test="item.ffrq !=null and  item.ffrq !=''">
                    ,ffrq=cast(#{item.ffrq} as date)
                </if>
                <if test="item.ffrq ==null or  item.ffrq ==''">
                    ,ffrq=null
                </if>
                <where>
                    ffjlid=#{item.ffjlid}
                </where>
            </foreach>
        </if>
    </update>

    <update id="deleteByIds" parameterType="FfjlDto">
        delete from igams_ffjl
        where
        ffjlid in
        <foreach collection="ids" separator="," open="(" close=")" item="item">
            #{item}
        </foreach>
    </update>
</mapper>
