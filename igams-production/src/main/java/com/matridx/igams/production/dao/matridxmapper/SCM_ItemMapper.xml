<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matridx.igams.production.dao.matridxsql.SCM_ItemDao" >
	<insert id="insert" parameterType="SCM_ItemDto">
		insert into SCM_Item(cInvCode)values(#{cInvCode})
	</insert>
	
	<!-- 获取ItemId最大值 -->
	<select id="getMaxItemId" resultType="java.lang.Integer">
		select COALESCE(max(Id),0) as num from SCM_Item
	</select>
	
	<select id="getDtoBycInvVode" parameterType="String" resultType="SCM_ItemDto">
		select Id from SCM_Item
		<where>
			cInvCode=#{cInvCode}
		</where>
	</select>
</mapper>