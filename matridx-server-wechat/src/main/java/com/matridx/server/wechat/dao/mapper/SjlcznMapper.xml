<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.matridx.server.wechat.dao.post.ISjlcznDao" >
	<insert id="insert" parameterType="SjlcznDto">
		insert into igams_sjlczn(sjid,znid)
		values
		<foreach collection="ids" separator="," open="" close="" item="item" index="index">
			(#{sjid},#{item})
		</foreach>
	</insert>
	
	<delete id="delete" parameterType="SjlcznDto">
		delete from igams_sjlczn
		<where>
			sjid=#{sjid}
		</where>
	</delete>
</mapper>
